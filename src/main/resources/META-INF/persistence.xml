<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
    <persistence-unit name="gestioneEventiPU">
        <!--Classi che saranno soggette a persistenza -->
        <class>org.example.Evento</class>
        <!--Configurazione della connessione al database-->
        <properties>
            <!--driver di postgresql-->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <!--indirizzo url del database-->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gestione_eventi"/>
            <!--user e password-->
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="MonkeyD.Luffy92"/>
            <!--vacabolario/dialetto-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <!--creazione automatica delle tabelle-->
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>


    </persistence-unit>
</persistence>